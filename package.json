{
	"$schema": "https://www.raycast.com/schemas/extension.json",
	"name": "noll",
	"title": "Noll",
	"description": "Translate screenshots instantly with Noll",
	"icon": "extension-icon.png",
	"author": "nicolai",
	"categories": [
		"Productivity"
	],
	"license": "MIT",
	"commands": [
		{
			"name": "translate-clipboard",
			"title": "Translate Screenshot",
			"description": "Translate image from clipboard to your default language",
			"mode": "view"
		}
	],
	"preferences": [
		{
			"name": "defaultLanguage",
			"type": "dropdown",
			"title": "Default Target Language",
			"description": "Language to translate screenshots into",
			"required": true,
			"default": "en",
			"data": [
				{
					"title": "English",
					"value": "en"
				},
				{
					"title": "German",
					"value": "de"
				},
				{
					"title": "French",
					"value": "fr"
				},
				{
					"title": "Spanish",
					"value": "es"
				},
				{
					"title": "Italian",
					"value": "it"
				},
				{
					"title": "Portuguese",
					"value": "pt"
				},
				{
					"title": "Dutch",
					"value": "nl"
				},
				{
					"title": "Polish",
					"value": "pl"
				},
				{
					"title": "Russian",
					"value": "ru"
				},
				{
					"title": "Chinese (Simplified)",
					"value": "zh-Hans"
				},
				{
					"title": "Japanese",
					"value": "ja"
				},
				{
					"title": "Korean",
					"value": "ko"
				}
			]
		}
	],
	"dependencies": {
		"@raycast/api": "^1.94.2",
		"@raycast/utils": "^1.17.0"
	},
	"devDependencies": {
		"@raycast/eslint-config": "^2.0.4",
		"@types/node": "^22.0.0",
		"@types/react": "^19.0.0",
		"eslint": "^9.0.0",
		"prettier": "^3.0.0",
		"typescript": "^5.0.0"
	},
	"scripts": {
		"build": "ray build",
		"dev": "ray develop",
		"lint": "ray lint",
		"fix-lint": "ray lint --fix",
		"publish": "npx @raycast/api@latest publish"
	}
}
